mixin submission-form(action)
	form(method='post', style="margin-bottom: 40px;")
		input(type='hidden', name='action', value='submission.create')
		.media
			.media-body
				label(for='name' class="col-sm-2").form-label
					| Name
				input(name='name' type='text' class="col-sm-10" placeholder='We can be on a first name basis.').form-control
				br
				p 
					| Is this your real name?
				label(for='Yes').form-label
					| Yes				
				input(type="radio" name="realName" value="1" ).form-control
				label(for='no').form-label
					| No
				input(type="radio" name="realName" value="0" ).form-control
				br
				label(for='location' class="col-sm-2").form-label
					| Where
				input(name='location' type='text' class="col-sm-10" placeholder='City, State, Country').form-control
				br
				label(for='age' class="col-sm-2").form-label
					| Age
				input(name='age' type='text' class="col-sm-10" placeholder='Age').form-control
				br
				label(for='email' class="col-sm-2").form-label
					| Email
				input(name='email' type='text' class="col-sm-10" placeholder='Just in case I have questions').form-control
				br
				p 
					| Your five things...
				label(for='thing1' class="col-sm-2" ).form-label
					| 1
				input(name='thing1' type='text' class="col-sm-10").form-control
				br
				label(for='thing2' class="col-sm-2").form-label
					| 2
				input(name='thing2' type='text' class="col-sm-10").form-control
				br
				label(for='thing3' class="col-sm-2").form-label
					| 3
				input(name='thing3' type='text' class="col-sm-10").form-control
				br
				label(for='thing4' class="col-sm-2").form-label
					| 4
				input(name='thing4' type='text' class="col-sm-10").form-control
				br
				label(for='thing5' class="col-sm-2").form-label
					| 5
				input(name='thing5' type='text' class="col-sm-10").form-control				

				button(type='submit').btn.btn-primary 
					| Post Submission
				

mixin submission(submission, comments)
	div.result
		if data
		div.result_header
			div.result_name 
				| #{submission.name}, #{submission.age}
			div.result_social.col-sm-3.pull-right
				ul.sclnav
					li.twit 
						a(href="#1")
					li.fcbk 
						a(href="#2")
					li.plus 
						a(href="#3")
				a.result_leave_comment(href="#myModal", data-toggle="modal" data-submission="#{submission.id}")
				p.comment-count 
				| comments: #{comments}
		div.result_location #{submission.location}
		div.result_answers
			ul
				li 
					| 1. #{submission.thing1}
				li 
					| 2. #{submission.thing2}
				li 
					| 3. #{submission.thing3}
				li 
					| 4. #{submission.thing4}
				li 
					| 5. #{submission.thing5}